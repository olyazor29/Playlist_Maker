<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/trackCoverImageView"
        android:layout_width="@dimen/track_cover_size"
        android:layout_height="@dimen/track_cover_size"
        android:layout_marginVertical="@dimen/button_icon_padding"
        android:layout_marginStart="@dimen/icon_padding_end" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/button_icon_padding">

        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ExampleName"
            android:textAppearance="@style/SettingsTextStyle"
            android:layout_marginTop="@dimen/margin_top"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/trackInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ExampleArtist â€¢ 0:00 "
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textSize="@dimen/track_info_text_size"
            android:textColor="?attr/colorAccent"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <ImageView
        android:id="@+id/trackArrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward_icon"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/icon_padding_end"
        app:tint="?attr/colorAccent" />

</LinearLayout>