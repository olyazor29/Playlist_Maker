<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/blue">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/app_name"
        android:textSize="@dimen/text_size"
        android:textFontWeight="500"
        android:textColor="@color/white"

        android:paddingTop="14dp"
        android:paddingBottom="@dimen/middle_margin"
        android:paddingStart="@dimen/middle_margin" />
    
    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:text="@string/search"
        android:textColor="@color/black_header"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size"
        android:textFontWeight="500"

        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/little_padding"
        app:iconTint="@color/black_header"

        android:gravity="center"
        android:layout_marginHorizontal="@dimen/middle_margin"
        android:layout_marginTop="@dimen/header_margin"
        app:cornerRadius="@dimen/corner_button"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/library_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:text="@string/library"
        android:textColor="@color/black_header"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size"
        android:textFontWeight="500"

        app:icon="@drawable/library_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/little_padding"
        app:iconTint="@color/black_header"

        android:gravity="center"
        android:layout_marginHorizontal="@dimen/middle_margin"
        android:layout_marginTop="@dimen/middle_margin"
        app:cornerRadius="@dimen/corner_button"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:text="@string/settings"
        android:textColor="@color/black_header"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size"
        android:textFontWeight="500"

        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/little_padding"
        app:iconTint="@color/black_header"

        android:gravity="center"
        android:layout_marginHorizontal="@dimen/middle_margin"
        android:layout_marginTop="@dimen/middle_margin"
        app:cornerRadius="@dimen/corner_button"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="28dp"/>

</LinearLayout>