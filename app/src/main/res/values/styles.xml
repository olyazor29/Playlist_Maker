<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenHeaderTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/ScreenHeaderTextStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/middle_margin</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="cornerRadius">@dimen/corner_button</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsMaterialTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/SettingsTextStyle</item>
        <item name="android:paddingVertical">@dimen/settings_text_vertical_padding</item>
        <item name="android:paddingStart">@dimen/middle_margin</item>
        <item name="android:paddingEnd">@dimen/icon_padding_end</item>
    </style>

    <style name="SearchScreenButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="PlayerTrackDataTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

</resources>